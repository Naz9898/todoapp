{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": true,
    "outDir": "../dist",   /* backend/dist */
    "rootDir": "."         /* backend/src */
  },
  "include": ["**/*"],     /* backend/src/* */
  "exclude": ["node_modules"]
}